# User-Space Production Environment Configuration
# For deployment without root access

# Database Configuration (Production MySQL)
DB_CLIENT=mysql
DB_HOST=your-mysql-host
DB_PORT=3306
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD="your-secure-database-password"

# Backend Configuration
APP_ENV=production
APP_SECRET=your-super-secure-secret-key-change-this-in-production-min-32-chars
APP_BASE_URL=https://yourdomain.com:8000
CORS_ORIGINS=https://yourdomain.com:3500,https://yourdomain.com:8000

# Routing Configuration
GRAPHHOPPER_MODE=cloud
USE_CLOUD_MATRIX=true
GRAPHHOPPER_API_KEY=your-graphhopper-api-key
GRAPHHOPPER_BASE_URL=https://graphhopper.com/api/1

# Maps Configuration
MAPTILER_API_KEY=your-maptiler-api-key

# Frontend Configuration (Next.js)
NEXT_PUBLIC_API_BASE_URL=https://yourdomain.com:8000
NEXT_PUBLIC_MAPTILER_API_KEY=your-maptiler-api-key

# Production Configuration
DEBUG=false
LOG_LEVEL=info

# Security
ENFORCE_PROD_DB=true

# Server Configuration (User-space ports)
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3500

# Process Management
BACKEND_WORKERS=2
FRONTEND_INSTANCES=1

# User-space paths
APP_DIR=$HOME/dayplanner
LOG_DIR=$HOME/dayplanner/logs
BACKUP_DIR=$HOME/dayplanner-backups

# Node.js Configuration
NODE_ENV=production
