# Production Deployment Configuration
# Copy this file to deploy-config.local.env and customize for your environment

# Production Server Configuration
# Replace with your actual production server details
PROD_SERVER=your-production-server.com
PROD_USER=deploy
PROD_APP_DIR=/var/www/mytrip
PROD_VENV_DIR=/var/www/mytrip/venv
PROD_SERVICE_NAME=mytrips-backend

# SSH Configuration
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_PORT=22

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_DIR_PREFIX=/tmp/mytrips-backup

# Health Check Configuration
HEALTH_CHECK_URL=http://localhost:8000/health
HEALTH_CHECK_TIMEOUT=30

# Test Configuration
RUN_TESTS_AFTER_DEPLOY=true
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

