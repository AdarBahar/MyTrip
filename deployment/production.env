# Production Environment Configuration
# Copy this file to .env.production and customize for your server

# Database Configuration (Production MySQL)
DB_CLIENT=mysql
DB_HOST=your-mysql-host
DB_PORT=3306
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASSWORD="your-secure-database-password"

# Backend Configuration
APP_ENV=production
APP_SECRET=your-super-secure-secret-key-change-this-in-production-min-32-chars
APP_BASE_URL=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Routing Configuration
GRAPHHOPPER_MODE=cloud
USE_CLOUD_MATRIX=true
GRAPHHOPPER_API_KEY=your-graphhopper-api-key
GRAPHHOPPER_BASE_URL=https://graphhopper.com/api/1

# For self-hosted GraphHopper (optional)
# GRAPHHOPPER_MODE=selfhost
# GRAPHHOPPER_BASE_URL=http://localhost:8989

# Maps Configuration
MAPTILER_API_KEY=your-maptiler-api-key

# AI Configuration
OPENAI_API_KEY=your-openai-api-key

# Frontend Configuration (Next.js)
NEXT_PUBLIC_API_BASE_URL=https://yourdomain.com/api
NEXT_PUBLIC_MAPTILER_API_KEY=your-maptiler-api-key

# Production Configuration
DEBUG=false
LOG_LEVEL=info

# Security
ENFORCE_PROD_DB=true

# Server Configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
FRONTEND_PORT=3500

# Process Management
BACKEND_WORKERS=4
FRONTEND_INSTANCES=1

# Logging
LOG_DIR=/var/log/dayplanner
ACCESS_LOG=/var/log/dayplanner/access.log
ERROR_LOG=/var/log/dayplanner/error.log
