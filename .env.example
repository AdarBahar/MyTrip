# Database Configuration
DB_CLIENT=mysql
DB_HOST=your-mysql-host
DB_PORT=3306
DB_NAME=your-database-name
DB_USER=your-username
DB_PASSWORD=your-password

# Backend Configuration
APP_ENV=dev
APP_SECRET=change-me-in-production-use-long-random-string
APP_BASE_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3500
# PHP endpoints (legacy) CORS
# REQUIRED: Allowed CORS Origins (comma-separated, no spaces)
# For web browsers: Add your actual domains
# For mobile apps: Use "mobile" or "*" (see documentation)
# Examples:
#   Web only: ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
#   Mobile only: ALLOWED_ORIGINS=mobile
#   Both: ALLOWED_ORIGINS=https://yourdomain.com,mobile
#   Development: ALLOWED_ORIGINS=http://localhost:3000,mobile
ALLOWED_ORIGINS=mobile


# Routing Configuration
GRAPHHOPPER_MODE=cloud
GRAPHHOPPER_API_KEY=your-graphhopper-api-key-here
GRAPHHOPPER_BASE_URL=http://graphhopper:8989

# Maps Configuration
MAPTILER_API_KEY=your-maptiler-api-key-here

# Frontend Configuration (Next.js)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_MAPTILER_API_KEY=your-maptiler-api-key-here

# Development Configuration
DEBUG=true
LOG_LEVEL=info

# Docker Configuration
COMPOSE_PROJECT_NAME=roadtrip-planner

# Location API / Tests
# Token used by location write endpoints (POST /location/api/*)
LOC_API_TOKEN=your-location-api-token

# Production test mode toggle for pytest runs
# Set to true/1/yes/y/on to run tests against production DBs via --production
# Leave blank or unset for normal (SQLite-in-memory) test runs
PYTEST_PRODUCTION_MODE=

# Example commands for running tests (uncomment and run in your shell)
# - Focused location stats test on prod DBs:
#   PYTEST_ADDOPTS="-q -x --disable-warnings -r fE -k 'TestStatsEndpoint and test_stats_basic_counts_last_24h'" \
#   python3 backend/run_tests.py location --production
# - Full location suite on prod DBs:
#   PYTEST_ADDOPTS="-q --disable-warnings -r fE" python3 backend/run_tests.py location --production
# - Comprehensive suite on prod DBs:
#   PYTEST_ADDOPTS="-q --disable-warnings" python3 backend/run_tests.py comprehensive --production
